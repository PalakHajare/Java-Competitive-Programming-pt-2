
import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
    public static void Reverse(String str, int idx){
        if(idx==0){
            System.out.print(str.charAt(idx));
            return;
        }
        
        System.out.print(str.charAt(idx));
        Reverse(str,idx-1);
    }
	public static void main (String[] args) throws java.lang.Exception
	{
		String str = "abcd";
		Reverse(str,str.length()-1);

	}
}
